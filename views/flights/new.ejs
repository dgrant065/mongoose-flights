<%- include('../partials/header') %>

<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
    <label>Airline:
        <select name="airline" required>
            <option value="JetBlue">JetBlue</option>
            <option value="Delta">Delta</option>
            <option value="United">United</option>
            <option value="Southwest">Southwest</option>
            <option value="Spirit">Spirit</option>
        </select>
    </label><br>
    <label>Airport:
        <select name="airport" required>
            <option value="JFK">JFK - John F. Kennedy Intl. Airport</option>
            <option value="MCO">MCO - Orlando Intl. Airport</option>
            <option value="ALB">ALB - Albany Intl. Airport</option>
            <option value="ORD">ORD - O'Hare Intl. Airport</option>
        </select>
    </label><br>
    <label>Flight Number:
        <input type="number" name="flightNo" min="10" max="9999" required>
    </label><br>
    <label>Departs:
      <input type="datetime-local" name="departs">
    </label><br>
    <button type="submit">Add Flight</button>
  </form>
  <p><%= errorMsg %></p>
  
  <%- include('../partials/footer') %>