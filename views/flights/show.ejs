<%- include('../partials/header') %>

<h2>DEPARTURE</h2>
<table>
    <thread>
        <tr>
            <th>SAirline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
        </tr>
    </thread>
    <tbody>
        <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><%= flight.flightNo %></td>
            <td><% flight.departs.toLocaleString() %></td>
        </tr>
    </tbody>
</table>
<br><br>

<h2>ARRIVALS</h2>
<% if (flight.destinations.lenght) { %>
    <table>
        <thead>
            <tr>
                <th>Airport</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(function(dest) { %>
                <tr>
                    <td><%= dest.airport %></td>
                    <td><%= dest.arrival.toLocaleString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
      <h5>No Destinations Yet</h5>
    <% } %>

<br><br>
<h3>ADD DESTINATION</h3>
<forn action="/flights/<%= flight._id %>/destinations" method="POST">
    <label>Airport:
        <select name="airport" required>
            <option value="SDQ">SDQ - Las Americas Intl. Airport</option>
            <option value="LYS">LYS - Lyon-Saint-Exupery Airport</option>
            <option value="NRT">NRT - Narita Intl. Airport</option>
            <option value="AUA">AUA - Queen Beatrix Intl. Airport</option>
            <option value="BEY">BEY - Beirut-Rafic Hariri Intl. Airport</option>
        </select>
    </label><br>
    <label>Arrival:
        <input type="datetime-local" name="arrival" required>
    </label><br>
    <button type="submit">Add Destination</button>
</forn>

<%- include('../partials/footer') %>
